    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "main",
            "args": [
                "--runner",
                "DirectRunner",
                "--input",
                "./input/input.txt",
                "--output",
                "./output/output.txt"
            ],
            "justMyCode": true
        }
    ]
}